{
  "name": "advpl-devtools",
  "displayName": "advpl-devtools",
  "description": "Uma extens√£o para facilitar o desenvolvimento em ADVPL",
  "version": "0.0.15",
  "publisher": "felipednegredo",
  "icon": "img/logo.png",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/felipednegredo/advpl-snippets.git"
  },
  "activationEvents": [
    "onLanguage:advpl"
  ],
  "main": "./extension.js",
  "files": [
    "extension.js",
    "functionDescriptions.json"
  ],
  "contributes": {
    "languages": [{
      "id": "advpl",
      "extensions": [".prw", ".prx", ".pvc", ".pvo"],
      "aliases": ["ADVPL", "advpl"]
    }],
    "commands": [{
      "command": "advpl-snippets.formatCode",
      "title": "Format ADVPL Code"
    }],
    "snippets": [
      {
        "language": "advpl",
        "path": "./snippets/advpl.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.12",
    "@types/node": "20.x",
    "eslint": "^9.21.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.4.1"
  }
}